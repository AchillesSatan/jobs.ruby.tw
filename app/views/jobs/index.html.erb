
<%= form_tag jobs_path, :method => :get do %>
	<%= text_field_tag :keyword %>
	<%= submit_tag t(:search), :disable_with => t(:submiting) %>
<% end %>

<p><%= link_to t("post_a_new_job"), new_job_path, :title => t("post_a_new_job") %></p>

<table border="1">
	<tr>
		<th><%= t("job.posted") %></th>
		<th><%= t("job.title") %></th>
		<th><%= t("job.company_name") %></th>
		<th><%= t("job.location") %></th>
	</tr>
<% @jobs.each do |job| %>

	<tr>
		<td><%= job.created_at.to_date %></td>
		<td><%= link_to job.title, job_path(job) %></td>
		<td><%= job.company_name %></td>
		<td><%= job.location %></td>
	</tr>
	
<% end %>
</table>